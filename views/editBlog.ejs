<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <title>CKDEV</title>
</head>

<body>
    <%- include navbar %>

    <div class="container">
        <h1 align="center">แก้ไขบทความ</h1>
        <h1><%= resultFind %></h1>
        <hr>

        <!-- <% if(locals.resultError) { %> -->
        <ul>
            <% Object.values(resultError).forEach(function(error){ %>
            <li class="alert alert-danger"><%= error.msg %></li>
            <% }) %>
        </ul>
        <!-- <% } %> -->

        <form action="/blog/addBlog" method="post">
            <div class="form-group">
                <label for="">ชื่อบทความ</label>
                <input type="text" name="title" id="" class="form-control" value="<%= resultFind.title %>">
            </div>
            <div class="form-group">
                <label for="">รายละเอียด</label>
                <textarea name="article" id="" cols="30" rows="10"
                    class="form-control"><%= resultFind.article %></textarea>
            </div>
            <div class="form-group">
                <label for="">หมวดหมู่</label>
                <select name="category" id="" class="form-control">
                    <option value="ภาพยนตร์"
                    <% if (resultFind.category == "ภาพยนตร์") { %>
                        selected
                        <% } %>>ภาพยนตร์
                    </option>
                    <option value="เพลง"
                    <% if (resultFind.category == "เพลง") { %>
                        selected
                        <% } %>>เพลง
                    </option>
                    <option value="นิยาย"
                    <% if (resultFind.category == "นิยาย") { %>
                        selected
                        <% } %>>นิยาย
                    </option>
                </select>
            </div>
            <div>
                <input type="submit" name="" id="" value="อัพเดท" class="btn btn-primary my-3">
            </div>
        </form>
    </div>
    <script>
        CKEDITOR.replace('article');
    </script>
</body>

</html>